          },
          "secondary_servicer_id": {
            "type": "string"
          },
          "loan_type": {
            "type": "integer"
          },
          "principal_amount": {
            "type": "integer"
          },
          "loan_amount": {
            "type": "integer"
          },
          "collateral_type": {
            "type": "integer"
          },
          "terms_length": {
            "type": "integer"
          },
          "encumbered_status": {
            "type": "integer"
          },
          "interest_rate": {
            "type": "number"
          },
          "term": {
            "type": "integer"
          },
          "payment_frequency": {
            "type": "integer"
          },
          "installment": {
            "type": "integer"
          },
          "details": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "dob": {
                "type": "string",
                "format": "date"
              },
              "mobile": {
                "type": "integer"
              },
              "govtId": {
                "type": "string"
              },
              "address": {
                "type": "string"
              },
              "employmentStatus": {
                "type": "string"
              },
              "grade": {
                "type": "string"
              },
              "subgrade": {
                "type": "string"
              },
              "employeeTitle": {
                "type": "string"
              },
              "employmentLength": {
                "type": "integer"
              },
              "homeOwnership": {
                "type": "string"
              },
              "annualIncrement": {
                "type": "integer"
              }
            }
          }
        },
        "required": [
          "borrower_id",
          "lender_id",
          "primary_servicer_id",
          "loan_type",
          "principal_amount"
        ]
      },
      "LoanResponse": {
        "type": "object",
        "properties": {
          "transactionHash": {
            "type": "string"
          },
          "loanId": {
            "type": "string"
          }
        }
      },
      "RequestDocuments": {
        "type": "object",
        "properties": {
          "loanId": {
            "type": "string"
          }
        },
        "required": [
          "loanId"
        ]
      },
      "VerifyDocuments": {
        "type": "object",
        "properties": {
          "loanId": {
            "type": "string"
          },
          "documentsComplete": {
            "type": "boolean"
          }
        },
        "required": [
          "loanId",
          "documentsComplete"
        ]
      },
      "StartUnderwriting": {
        "$ref": "#/components/schemas/VerifyDocuments"
      },
      "CompleteUnderwriting": {
